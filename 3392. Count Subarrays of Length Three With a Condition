class Solution {
    public int countSubarrays(int[] nums) {
        int count = 0;
        int n = nums.length;

        for(int i=0;i<n;i++)
        {
            if(i+2 >= n) break;
            int total=(nums[i]+nums[i+2])*2;
            int half= nums[i+1];
            if(total == half) count++;
        }
        return count;
    }
}
